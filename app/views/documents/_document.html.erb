<% @documents.each do |document| %>
<% show_for document do |d| %>
  <tr>
    <td><%= d.attribute :name, :label => false %></td>
    <td><%= d.attribute :in_date, :label => false, :format => :short %></td>
    <td><%= d.attribute :out_date, :label => false, :format => :short %></td>
    <td><%= d.attribute :receive_date, :label => false, :format => :short %></td>
    <td><%= d.attribute :description, :label => false %></td>
    <td><%= d.attribute :status_name, :label => false %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% end %>
