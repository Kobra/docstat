<%= simple_form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :in_date, :as => :string, :input_html => { :value => @document.simple_form_datetime(:in_date) } %>
    <%= f.input :out_date, :as => :string, :input_html => { :value => @document.simple_form_datetime(:out_date) } %>
    <%= f.input :receive_date, :as => :string, :input_html => { :value => @document.simple_form_datetime(:receive_date) } %>
    <%= f.input :description %>
    <%= f.association :status %>
  </div>

  <div class="actions">
    <%= f.button :submit, t(:submit) %>
  </div>
<% end %>
